# i3status configuration file.

general {
        colors = false
        interval = 5
}

order += "volume master"
order += "battery 1"
order += "wireless _first_"
order += "ethernet _first_"
order += "tztime local"

volume master {
        format = "VOL:%volume "
        format_muted = "VOL:%volume (muted) "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 1 {
        format = " BAT:%percentage %status"
        status_full = ""
        status_chr = "(charging)"
        status_bat = ""
        status_unk = "?"
}

wireless _first_ {
        format_up = " WIFI:%essid "
        format_down = " WIFI: - "
}

ethernet _first_ {
        format_up = " ETH:%ip (%speed) "
        format_down = " ETH: - "
}

tztime local {
        format = " %a %b %d - %I:%M %p "
}

