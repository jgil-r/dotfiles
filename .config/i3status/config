# i3status configuration file.

general {
        colors = false
        interval = 5
}

order += "volume master"
order += "battery all"
order += "wireless _first_"
order += "tztime local"

volume master {
        format = "VOL:%volume "
        format_muted = "VOL:%volume (muted) "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
        format = " BAT:%percentage %status"
        status_bat  = ""
        status_unk  = "? "
        status_chr  = "(charging) "
        status_full = ""
}

wireless _first_ {
        format_up = " WIFI:%essid (%quality) "
        format_down = " WIFI: - "
}

tztime local {
        format = " %a %b %d %I:%M %p"
}
