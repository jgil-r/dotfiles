# i3status configuration file.

general {
        colors = false
        interval = 5
}

order += "volume master"
order += "battery 1"
order += "tztime local"

volume master {
        format = " %volume"
        format_muted = " %volume"
        device = "pulse:0"
}

battery 1 {
        format = "%status %percentage"
        integer_battery_capacity = true
        status_chr = ""
        status_full = ""
        status_bat = ""
        status_unk = ""
}

tztime local {
        format = "%a %b %d - %I:%M %p"
}
